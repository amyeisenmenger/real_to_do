<h1>Add New Items to <%= @list.name %></h1>
<hr />
<%= form_for @item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />

  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />

  <%= f.label :priority %>
  <%= f.select :priority, (1..10) %>
  <br />

  <%= f.label :complete %>
  <%= f.check_box :complete %>
  <br />
  <%= f.hidden_field :list_id, :value=> @list.id %>

  <%= f.submit %>

<% end %>
<hr />
<%= link_to 'Home', root_path %> |
<%= link_to 'Return to List', list_path(@list.id) %>