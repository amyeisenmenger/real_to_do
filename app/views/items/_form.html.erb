<%= form_for @item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />

  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />

  <%= f.label :priority %>
  <%= f.select :priority, (1..10) %>
  <br />

  <%= f.label :complete %>
  <%= f.check_box :complete %>
  <br />
  <%= f.submit %>

<% end %>